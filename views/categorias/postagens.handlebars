<h1>{{categoria.nome}}</h1>
{{#each postagens}}
<div class="card">
    <div class="card-body">
        <h3>{{titulo}}</h3>
        <p>{{descricao}}</p>
        <a href="/postagem/{{slug}}"><button class="btn btn-info">Leia mais</button></a>
        <hr>
        <code>Data de publicação: {{date}}</code>
    </div>
</div>
{{else}}
  <h5>Nenhuma postagem</h5>
{{/each}}