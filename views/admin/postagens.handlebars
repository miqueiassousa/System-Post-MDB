<h2>Lista de Posts</h2>
<hr>
<a href="/admin/postagens/add"><button class="btn btn-success">NOVA POSTAGEM</button></a>


{{#each postagens}}
    <div class="card mt-4">
        <div class="cardy body">
            <h4>Titulo: {{titulo}}</h4>
            <p>Descrição: {{descricao}}</p>
            <small>Data: {{date}}</small></br>
            <small>Categoria: {{categoria.nome}}</small></br>
            <a href="/admin/postagens/edit/{{_id}}"><button class="btn btn-success">Editar Postagens</button></a>
            <a href="/admin/postagens/deletar/{{_id}}"><button class="btn btn-danger">Deletar Postagens</button></a>
            
        </div>
    </div>
{{else}}
    <p>Nenhuma postagem registrada</p>
{{/each}}